page {
  height: 100%;
  padding: 0;
  margin: 0;
}
.tabBox {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.tabBox2 {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.scroll {
  width: 100%;
  white-space: nowrap;
  background: #fff;
  /* 隐藏滚动条 */
}
.scroll .active {
  border-bottom: 2px solid #007aff;
}
.scroll ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.scroll text {
  display: inline-block;
  padding: 0 30rpx;
  margin: 0 10rpx;
  height: 100rpx;
  line-height: 50px;
}
.scroll2 {
  width: 150rpx;
  white-space: pre-wrap;
  text-align: center;
}
.scroll2 text {
  display: block;
  padding: 0;
  margin: 10rpx;
  line-height: 50px;
}
.scroll2 .active {
  border: none;
  border-right: 2px solid #007aff;
}
.sticky {
  position: -webkit-sticky;
  position: sticky;
  z-index: 999;
  padding-bottom: 5rpx;
}
.bottom {
  margin-top: 20rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.bottom .swiper {
  z-index: 1;
  height: 100%;
  overflow: hidden;
}
.bottom .red {
  height: 100%;
}
.bottom .empty {
  height: 100%;
  background-color: #f5f5f5;
}

